{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    ":automergeBranch",
    ":automergeDigest",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":semanticCommits",
    "github>christopherburnham/area0//.github/renovate/allowedVersions.json5",
    "github>christopherburnham/area0//.github/renovate/autoMerge.json5",
    "github>christopherburnham/area0//.github/renovate/commitMessage.json5",
    "github>christopherburnham/area0//.github/renovate/groups.json5",
    "github>christopherburnham/area0//.github/renovate/labels.json5",
    "github>christopherburnham/area0//.github/renovate/semanticCommits.json5",
    "github>christopherburnham/area0//.github/renovate/versioning.json5"
  ],
  "platform": "github",
  "onboarding": false,
  "requireConfig": "optional",
  "timezone": "America/Chicago",
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": ["prIgnoreNotification"],
  // configure flux manager
  "flux": {
    "fileMatch": ["kubernetes/.+\\.ya?ml$"]
  },
  // configure helm-values manager
  "helm-values": {
    "fileMatch": ["kubernetes/.+\\.ya?ml$"]
  },
  // configure kubernetes manager
  "kubernetes": {
    "fileMatch": [
      "\\.taskfiles/.+\\.ya?ml$",
      "infrastructure/.+\\.ya?ml$",
      "kubernetes/.+\\.ya?ml$"
    ]
  },
  "regexManagers": [
    {
      "description": "configure regex manager for custom dependencies",
      "fileMatch": [
        "infrastructure/.+\\.ya?ml$",
        "kubernetes/.+\\.ya?ml$"
      ],
      "matchStrings": [
        // Example: `k3s_release_version: "v1.27.3+k3s1"`
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\n.*?\"(?<currentValue>.*)\"\n",
        // Example: `- https://github.com/rancher/system-upgrade-controller/releases/download/v0.11.0/crd.yaml`
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\n.*?-\\s(.*?)\/(?<currentValue>[^/]+)\/[^/]+\n",
        // Example: apiVersion=helm.cattle.io/v1 kind=HelmChart
        "datasource=(?<datasource>\\S+)\n.*?repo: (?<registryUrl>\\S+)\n.*?chart: (?<depName>\\S+)\n.*?version: (?<currentValue>\\S+)\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "description": "configure regex manager for CloudNativePG PostgreSQL",
      "fileMatch": [
        "kubernetes/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "imageName: (?<depName>\\S+):(?<currentValue>.*\\-.*)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "redhat"
    }
  ]
}
