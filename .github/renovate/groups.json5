{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": ["1Password Connect Group"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "groupName": "1Password Connnect",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/1password/"]
    },
    {
      "description": ["Cribl Group"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "groupName": "Cribl",
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchPackageNames": [
        "/cribl/",
        "/edge/",
        "/logstream/"
      ],
      "versioning": "semver"
    },
    {
      "description": ["Flux Operator Group"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "groupName": "Flux Operator",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "/flux-operator/",
        "/flux-instance/"
      ]
    },
    {
      "description": ["Intel Device Plugins Group"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "groupName": "Intel-Device-Plugins",
      "matchDatasources": ["helm"],
      "matchPackageNames": ["/intel-device-plugins/"]
    },
    {
      "description": ["Rook-Ceph Group"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "groupName": "Rook-Ceph",
      "matchDatasources": ["helm"],
      "matchPackageNames": ["/rook.ceph/"]
    }
  ]
}
