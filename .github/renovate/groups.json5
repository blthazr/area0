{
  "packageRules": [
    {
      "description": "Rook-Ceph Group",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
    "groupName": "Rook-Ceph",
    "matchDatasources": ["helm"],
    "matchPackagePatterns": ["rook.ceph"],
    "separateMinorPatch": true
    },
    {
      "description": "External Snapshot Controller Group",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "groupName": "External Snapshot Controller",
      "matchDatasources": ["helm"],
      "matchPackageNames": [
        "snapshot-controller",
        "snapshot-validation-webhook"
      ],
      "separateMinorPatch": true
    },
    {
      "description": "Flux Group",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "groupName": "Flux",
      "matchDatasources": [
        "docker",
        "github-tags"
      ],
      "matchPackagePatterns": ["flux"],
      "separateMinorPatch": true
    }
  ]
}
