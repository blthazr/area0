{
  "packageRules": [
    {
      "description": "Enable automerge for observability apps",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["helm"],
      "matchPackageNames": [
        "grafana",
        "kube-prometheus-stack",
        "snmp-exporter",
        "speedtest-exporter",
        "thanos",
        "unifi-poller"
      ],
      "matchUpdateTypes": ["minor","patch"],
      "requiredStatusChecks": null
    },
    {
      "description": "Enable automerge for github action tags",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["github-tags"],
      "matchPackageNames": [
        "renovatebot/github-action"
      ],
      "matchUpdateTypes": ["minor","patch"],
      "requiredStatusChecks": null
    },
    {
      "description": "Enable scheduled automerge for media apps",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["docker","helm"],
      "matchPackagePatterns": [
        "plex",
        "overseerr"
      ],
      "matchUpdateTypes": ["minor","patch"],
      "requiredStatusChecks": null,
      "schedule": ["after 3am and before 7am"]
    },
    {
      "description": "Enable anytime automerge for media apps",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["docker","helm"],
      "matchPackagePatterns": [
        "bazarr",
        "calibre",
        "calibre-web",
        "dizquetv",
        "gaps",
        "komga",
        "lidarr",
        "mylar",
        "nzbhydra2",
        "prowlarr",
        "radarr",
        "readarr",
        "sabnzbd",
        "sonarr",
        "tautulli",
        "tdarr"
      ],
      "matchUpdateTypes": ["minor","patch"],
      "requiredStatusChecks": null
    }
  ]
}
