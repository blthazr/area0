{
  "packageRules": [
    {
      "description": "Enable automerge for github action tags",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["github-tags"],
      "matchPackageNames": [
        "renovatebot/github-action"
      ],
      "matchUpdateTypes": ["minor","patch"],
      "requiredStatusChecks": null
    },
    {
      "description": "Enable automerge for Plex apps",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["docker","helm"],
      "matchPackageNames": [
        "ghcr.io/k8s-at-home/plex",
        "plex",
        "overseerr"
      ],
      "matchUpdateTypes": ["minor","patch"],
      "requiredStatusChecks": null,
      "schedule": ["after 3am and before 7am"]
    }
  ]
}
