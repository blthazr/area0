{
  "packageRules": [
    {
      "description": "Auto merge GitHub Actions",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["github-tags"],
      "matchPackageNames": [
        "lycheeverse/lychee-action",
        "renovatebot/github-action"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "requiredStatusChecks": null
    },
    {
      "description": "Auto merge media apps",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchPackagePatterns": [
        "bazarr",
        "dizquetv",
        "gaps",
        "lidarr",
        "overseerr",
        "plex",
        "prowlarr",
        "radarr",
        "sabnzbd",
        "sonarr",
        "tautulli"
      ],
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch"
      ],
      "requiredStatusChecks": null
    },
    {
      "description": "Auto merge observability apps during maintenance window",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchPackagePatterns": [
        "grafana",
        "kube-prometheus-stack",
        "thanos",
        "unifi-poller"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "requiredStatusChecks": null,
      "schedule": ["after 3am, before 6am"],
      "stabilityDays": 2
    }
  ]
}
