{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto merge container digests",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "ghcr.io/bjw-s",
        "ghcr.io/onedr0p"
      ],
      "matchUpdateTypes": ["digest"]
    },
    {
      "description": "Auto merge container patches [maintenance window]",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeSchedule": ["after 2am, before 6am"],
      "automergeType": "branch",
      "ignoreTests": true,
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "docker.io/hkotel/mealie",
        "ghcr.io/advplyr/audiobookshelf",
        "ghcr.io/blakeblackshear/frigate",
        "ghcr.io/onedr0p/plex",
        "ghcr.io/sct/overseerr",
        "teslamate/teslamate"
      ],
      "matchUpdateTypes": ["patch"]
    },
    {
      "description": "Auto merge container patches [anytime]",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "ghcr.io/bjw-s/calibre-web",
        "ghcr.io/meeb/tubesync",
        "ghcr.io/onedr0p/bazarr",
        "ghcr.io/onedr0p/lidarr",
        "ghcr.io/onedr0p/prowlarr",
        "ghcr.io/onedr0p/radarr",
        "ghcr.io/onedr0p/readarr",
        "ghcr.io/onedr0p/sabnzbd",
        "ghcr.io/onedr0p/sonarr-develop",
        "ghcr.io/onedr0p/tautulli",
        "ghcr.io/recyclarr/recyclarr",
        "ghcr.io/wizarrrr/wizarr"
      ],
      "matchUpdateTypes": ["patch"]
    },
    {
      "description": "Auto merge grafana dashboards",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchDatasources": ["custom.grafana-dashboards"],
      "matchUpdateTypes": ["major"]
    },
    {
      "description": "Auto merge GitHub Actions",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchDatasources": ["github-tags"],
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
