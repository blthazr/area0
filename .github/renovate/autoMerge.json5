{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto merge container digests [maintenance window]",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "ghcr.io/bjw-s",
        "ghcr.io/onedr0p"
      ],
      "matchUpdateTypes": ["digest"],
      // "schedule": ["after 2am, before 6am"]
    },
    {
      "description": "Auto merge GitHub Actions",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchDatasources": ["github-tags"],
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
