{
  "packageRules": [
    {
      "description": "Auto merge apps [anytime]",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchPackagePatterns": [
        "bazarr",
        "gaps",
        "lidarr",
        "prowlarr",
        "radarr",
        "recyclarr",
        "sabnzbd",
        "sonarr",
        "tautulli",
        "theme-park"
      ],
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch"
      ]
    },
    {
      "description": "Auto merge apps [maintenance window]",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchPackagePatterns": [
        "frigate",
        "mealie"
      ],
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch"
      ],
      "schedule": ["after 3am, before 6am"],
    },
    {
      "description": "Auto merge apps [maintenance window] [1 stability day]",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchPackagePatterns": [
        "overseerr",
        "plex"
      ],
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch"
      ],
      "schedule": ["after 3am, before 6am"],
      "stabilityDays": 1
    },
    {
      "description": "Auto merge GitHub Actions",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true,
      "matchDatasources": ["github-tags"],
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
