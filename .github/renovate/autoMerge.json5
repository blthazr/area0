{
  "packageRules": [
    {
      "description": "Automerge github action tags",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["github-tags"],
      "matchPackageNames": ["renovatebot/github-action"],
      "matchUpdateTypes": [
        "minor",
        "patch",
      ],
      "requiredStatusChecks": null,
    },
    {
      "description": "Automerge public media apps during maintenance window",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": [
        "docker",
        "helm",
      ],
      "matchPackagePatterns": [
        "dizquetv",
        "overseerr",
        "plex",
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
      ],
      "requiredStatusChecks": null,
      "schedule": ["after 3am, before 6am"],
      "stabilityDays": 1,
    },
    {
      "description": "Automerge apps anytime",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": [
        "docker",
        "helm",
      ],
      "matchPackagePatterns": [
        "bazarr",
        "gaps",
        "lidarr",
        "prowlarr",
        "radarr",
        "readarr",
        "sabnzbd",
        "sonarr",
        "tautulli",
        "teslamate",
        "theme-park",
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
      ],
      "requiredStatusChecks": null,
    },
    {
      "description": "Automerge observability apps during maintenance window",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": [
        "docker",
        "helm",
      ],
      "matchPackagePatterns": [
        "grafana",
        "kube-prometheus-stack",
        "thanos",
        "unifi-poller",
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
      ],
      "requiredStatusChecks": null,
      "schedule": ["after 3am, before 6am"],
      "stabilityDays": 2,
    },
  ],
}
