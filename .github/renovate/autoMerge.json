{
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "branch",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/k8s-at-home/lidarr",
        "ghcr.io/k8s-at-home/lidarr-nightly",
        "ghcr.io/k8s-at-home/plex",
        "ghcr.io/k8s-at-home/prowlarr",
        "ghcr.io/k8s-at-home/prowlarr-nightly",
        "ghcr.io/k8s-at-home/radarr",
        "ghcr.io/k8s-at-home/radarr-nightly",
        "ghcr.io/k8s-at-home/readarr",
        "ghcr.io/k8s-at-home/readarr-nightly",
        "ghcr.io/k8s-at-home/sabnzbd",
        "ghcr.io/k8s-at-home/sonarr",
        "ghcr.io/k8s-at-home/tautulli",
        "ghcr.io/sct/overseerr"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "requiredStatusChecks": null,
      "schedule": ["after 3am and before 5am"]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "matchDatasources": ["github-tags"],
      "matchPackageNames": [
        "renovatebot/github-action"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "requiredStatusChecks": null
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "matchDatasources": ["helm"],
      "matchPackageNames": [
        "kube-prometheus-stack",
        "lidarr",
        "overseerr",
        "plex",
        "prowlarr",
        "radarr",
        "readarr",
        "sabnzbd",
        "sonarr",
        "tautulli"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "requiredStatusChecks": null,
      "schedule": ["after 3am and before 5am"]
    }
  ]
}
