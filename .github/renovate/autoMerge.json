{
  "packageRules": [
    {
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["docker","helm"],
      "matchPackageNames": [
        "ghcr.io/k8s-at-home/plex",
        "plex"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "requiredStatusChecks": null,
      "schedule": ["after 3am and before 5am"]
    },
    {
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["docker","helm"],
      "matchPackagePatterns": [
        "kube-prometheus-stack",
        "lidarr",
        "nzbhydra2",
        "overseerr",
        "prowlarr",
        "radarr",
        "readarr",
        "sabnzbd",
        "sonarr",
        "tautulli"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "requiredStatusChecks": null
    },
    {
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "pr",
      "matchDatasources": ["github-tags"],
      "matchPackageNames": [
        "renovatebot/github-action"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "requiredStatusChecks": null
    }
  ]
}
