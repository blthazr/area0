{
  "packageRules": [
    {
      "matchDatasources": [
        "docker",
        "github-tags"
      ],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "ghcr.io/k8s-at-home/prowlarr-nightly",
        "renovatebot/github-action"
      ]
    },
    // github-actions
    {
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "branch",
      "excludePackageNames": ["lycheeverse/lychee-action"],
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "requiredStatusChecks": null,
    }
  ]
}
