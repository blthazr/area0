{
  /*+--- Text Editor ---+*/
  "editor.hover.delay": 1500,
  "editor.rulers": [
    100
  ],
  "files.associations": {
    "**/*.json5": "json5"
  },

  /*+--- Extensions ---+*/
  "linter.linters": {
    "yamllint": {
      "configFiles": [
        ".yamllint.yaml"
      ]
    }
  },
  "markdownlint.config": {
    "extends": ".markdownlint.yaml"
  },
  "prettier.configPath": ".prettierrc.yaml",
  "prettier.ignorePath": ".prettierignore",
  "sops.defaults.ageKeyFile": "age.key",
  "vs-kubernetes": {
    "vs-kubernetes.kubeconfig": "./kubeconfig",
    "vs-kubernetes.knownKubeconfigs": [
      "./kubeconfig"
    ]
  },
  "yaml.schemas": {
    "kubernetes": "./kubernetes/**/*.yaml"
  }
}
