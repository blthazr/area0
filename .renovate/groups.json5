{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Flux Operator Group",
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      groupName: "flux-operator",
      matchDatasources: ["docker"],
      matchPackageNames: [
        "/flux-instance/",
        "/flux-operator-manifests/",
        "/flux-operator/",
      ],
      minimumGroupSize: 3,
    },
  ],
}
