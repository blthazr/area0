{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "1Password Connect Group",
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      groupName: "1password-connect",
      matchDatasources: [
        "docker"
      ],
      matchPackageNames: [
        "/1password/"
      ],
      minimumGroupSize: 2,
    },
    {
      description: "Flux Operator Group",
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      groupName: "flux-operator",
      matchDatasources: [
        "docker"
      ],
      matchPackageNames: [
        "/flux-instance/",
        "/flux-operator-manifests/",
        "/flux-operator/",
      ],
      minimumGroupSize: 3,
    },
    {
      description: "Rook-Ceph Group",
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      groupName: "rook-ceph",
      matchDatasources: [
        "docker"
      ],
      matchPackageNames: [
        "/rook-ceph/",
        "/rook-ceph-cluster/",
      ],
      minimumGroupSize: 2,
    },
    {
      description: "Talos Group",
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      groupName: "talos",
      matchDatasources: [
        "docker"
      ],
      matchPackageNames: [
        "/installer/"
      ],
      minimumGroupSize: 2,
    },
  ],
}
