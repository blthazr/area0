{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  // configure flux manager
  flux: {
    managerFilePatterns: [
      "/(^|/)kubernetes/.+\\.ya?ml$/",
    ],
  },
  // configure helm-values manager
  "helm-values": {
    managerFilePatterns: [
      "/(^|/)kubernetes/.+\\.ya?ml$/",
    ],
  },
  // configure kubernetes manager
  kubernetes: {
    managerFilePatterns: [
      "/(^|/)kubernetes/.+\\.ya?ml$/",
    ],
  },
}
